<Window x:Class="HotelsManagement.BookRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelsManagement"
        mc:Ignorable="d"
        Title="Бронирование" Height="324" Width="647">
    <Grid RenderTransformOrigin="0.002,0.517">
        <Label Content="Выберите отель" HorizontalAlignment="Left" Margin="45,31,0,0" VerticalAlignment="Top" Height="30" Width="137"/>
        <ComboBox x:Name="HotelName" HorizontalAlignment="Left" Margin="45,56,0,0" VerticalAlignment="Top" Width="190" Height="32"
                  SelectionChanged="HotelName_SelectionChanged"/>

        <Label Content="Выберите этаж" HorizontalAlignment="Left" Margin="300,31,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Floor" HorizontalAlignment="Left" Margin="300,56,0,0" VerticalAlignment="Top" Width="109" Height="32" VerticalContentAlignment="Center" 
                  HorizontalContentAlignment="Center"/>

        <Label Content="Выберите тип комнаты" HorizontalAlignment="Left" Margin="45,99,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="Type" HorizontalAlignment="Left" Margin="45,128,0,0" VerticalAlignment="Top" Width="120" Height="32" SelectedIndex="0" VerticalContentAlignment="Center" 
                  HorizontalContentAlignment="Center">
            <ComboBoxItem Content="Стандартный"/>
            <ComboBoxItem Content="Люкс"/>
        </ComboBox>

        <Label Content="Имя:" HorizontalAlignment="Left" Margin="235,107,0,0" VerticalAlignment="Top" Width="43"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="214,140,0,0" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="287,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" Height="28"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Margin="287,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Height="27"/>
        <CheckBox x:Name="AllInclusiveCheck" Content="Услуга: Всё включено" HorizontalAlignment="Left" Margin="287,182,0,0" VerticalAlignment="Top"/>
        
        <Label Content="Выбор номера" HorizontalAlignment="Left" Margin="460,31,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="RoomSelection" HorizontalAlignment="Left" Margin="460,56,0,0" VerticalAlignment="Top" Width="107" Height="32" IsEnabled="False"/>

        <Button Content="Добавить в БД" HorizontalAlignment="Left" Margin="287,208,0,0" VerticalAlignment="Top" Height="34" Width="108" Click="AddGuest_Click"/>
    </Grid>
</Window>

