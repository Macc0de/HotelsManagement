<Window x:Class="HotelsManagement.EditGuestInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelsManagement"
        mc:Ignorable="d"
        Title="Редактирование" Height="324" Width="647">
    <Grid>
        <Label Content="Выберите отель" HorizontalAlignment="Left" Margin="36,26,0,0" VerticalAlignment="Top" Height="30" Width="137"/>
        <ComboBox x:Name="HotelName" HorizontalAlignment="Left" Margin="36,51,0,0" VerticalAlignment="Top" Width="190" Height="32"/>
        <Label Content="Введите номер" HorizontalAlignment="Left" Margin="258,24,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="RoomNumber" HorizontalAlignment="Left" Margin="258,50,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31"/>
        <Button Content="Найти гостя" HorizontalAlignment="Left" Margin="406,51,0,0" VerticalAlignment="Top" Width="103" Height="30" Click="FindGuest_Click"/>

        <Label Content="Имя:" HorizontalAlignment="Left" Margin="335,111,0,0" VerticalAlignment="Top" Width="43"/>
        <Label Content="Фамилия:" HorizontalAlignment="Left" Margin="314,144,0,0" VerticalAlignment="Top" Width="64"/>
        <TextBox x:Name="Name" HorizontalAlignment="Left" Margin="387,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="122" Height="28"/>
        <TextBox x:Name="Surname" HorizontalAlignment="Left" Margin="387,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" Height="27"/>
        <CheckBox x:Name="AllInclusiveCheck" Content="Услуга: Всё включено" HorizontalAlignment="Left" Margin="371,186,0,0" VerticalAlignment="Top"/>

        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="400,215,0,0" VerticalAlignment="Top" Height="34" Width="108" Click="SaveGuest_Click"/>
        <Button Content="Отменить" HorizontalAlignment="Left" Margin="290,215,0,0" VerticalAlignment="Top" Height="34" Width="95" Click="Cancel_Click"/>

    </Grid>
</Window>

