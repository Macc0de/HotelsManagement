<Window x:Class="HotelsManagement.ReleaseRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelsManagement"
        mc:Ignorable="d"
        Title="Удаление" Height="324" Width="647">
    <Grid>
        <Label Content="Выберите отель" HorizontalAlignment="Left" Margin="45,31,0,0" VerticalAlignment="Top" Height="30" Width="137"/>
        <ComboBox x:Name="HotelName" HorizontalAlignment="Left" Margin="45,56,0,0" VerticalAlignment="Top" Width="190" Height="32"/>

        <Label Content="Введите номер" HorizontalAlignment="Left" Margin="278,31,0,0" VerticalAlignment="Top" Width="108"/>
        <TextBox x:Name="RoomNumber" HorizontalAlignment="Left" Margin="278,57,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="31"/>
        <Button Content="Удалить из БД" HorizontalAlignment="Left" Margin="287,110,0,0" VerticalAlignment="Top" Width="103" Height="30" Click="ReleaseButton_Click"/>
    </Grid>
</Window>

